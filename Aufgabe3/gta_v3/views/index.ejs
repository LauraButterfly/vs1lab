<!DOCTYPE html>

<!-- File origin: VS1LAB A1a -->

<html lang="en">

<head>
    <!-- Leaflet CSS and JavaScript (in this order) -->
    <link rel='stylesheet' href='https://unpkg.com/leaflet@1.9.4/dist/leaflet.css'
    integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
    crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
    crossorigin=""></script>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GeoTagApp</title>
    <link rel="stylesheet" href="./stylesheets/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body class = "flex-container">
    <header class="header">
        <img src="./images/location.png" class="header__image" alt="an image of a map and location">
        <h1 class="header__title">GeoTagApp</h1>
        <nav class="header__navigation">
            <a href="#">About</a> | <a href="#">Help</a> | <a href="/">Home</a>
        </nav>
    </header>

    <main class="main">
        <section class="main__tagging tagging col-3">
            <h2>Tagging</h2>

            <!-- ############### VS1Lab 1a Form 1 Start -->
            <form id="tag-form" action="/tagging" method="post">
                <fieldset>
                    <legend>Add a new GeoTag</legend> 
                    <label for="latitudeTag">Latitude:</label><input id="latitudeTag" type="text" placeholder="49.01379" value="<%= latitude %>" readonly>
                    <label for="longitudeTag">Longitude:</label><input id="longitudeTag" type="text"placeholder="8.390071" value="<%= longitude %>" readonly>
                    <label for="name">Name:</label><input id="name" type="text" placeholder="e.g. Central Berlin" maxlength="10" pattern = "[a-zA-Z]*" required>
                    <label for="hashtag">Hashtag:</label><input id="hashtag" type="text" placeholder="e.g. #ber" pattern="#([a-zA-Z]{1,10})" required>
                    <button type="submit">Add Tag</button>
                </fieldset>
                <!-- ... your code here ... -->

            </form>
            <!-- ############### VS1Lab 1a Form 1 End -->

        </section>

        <section class="main__discovery discovery col-9">
            <h2 class="discovery__title">Discovery</h2>

            <!-- ############### VS1Lab 1a Form 2 Start -->
            <form class="discovery__search row" id="discoveryFilterForm" action="/discovery" method="post">

                <!-- ... your code here ... -->
                <fieldset class="row">
                    <legend>Search</legend>
                    <label for="searchterm">Search term or kewords:</label><input id="searchterm" type="text" placeholder="e.g. Berlin">
                    <label for="latitudeDis"></label><input id="latitudeDis" type="hidden" value="<%= latitude %>">
                    <label for="longitudeDis"></label><input id="longitudeDis" type="hidden" value="<%= longitude %>">
                    <button type="submit">Search</button>
                </fieldset>

            </form>
            <!-- ############### VS1Lab 1a Form 2 End -->
            <div class="discovery__wrapper">
                <div class="discovery__taglist col-4">
                    <ul class="discovery__results" id="discoveryResults">
                        <% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
                            <li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
                        <% }); %>
                    </ul>
                </div>

                <div class="discovery__map col-8" id="map" data-tags="<%= JSON.stringify(taglist) %>">
                    <img src="./images/mapview.jpg" alt="a map with locations" id="mapView" />
                </div>
            </div>
        </section>

    </main>

    <footer class="footer">
        <span>(c) 2021/22 HKA_IWI_VSYS</span>
    </footer>
    <!-- Load JavaScripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="./javascripts/map-manager.js"></script>
    <script src="./javascripts/location-helper.js"></script>
    <script src="./javascripts/geotagging.js"></script>
</body>

</html>
